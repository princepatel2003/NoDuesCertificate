<% layout("/layouts/boilerplate") %>
<a href="/download-pdf/<%= student._id %>" class="btn btn-outline-danger btn-sm ">
  Download as PDF
</a>
<body>

    <div class="college">
      <div class=" col-md-1 logo" >
          <img  src="https://reck.ac.in/wp-content/uploads/2023/03/rajkiya-engineering-college-kannauj-big-min.png">
      </div>
      <div class="col-md-10 info ">
          <h1>RAJKIYA ENGINEERING COLLEGE KANNAUJ</h1>
          <h1>UTTAR PRADESH</h1>
          <h3>(A GOVERNMENT ENGINEERING COLLEGE)</h3>
      </div>
    </div>
  <div class="certification">
      <h1>NO DUES CERTIFICATE</h1>
  </div>
  <!-- student info -->
   <div class="container mt-4">
    <div class="row align-items-center">
      <div class="col-md-6">
        <p><b>Reg.No:</b> <%= student.regNo %></p>
      </div>
      <div class="col-md-4 text-end">
        <p><b>Year of Admission:</b> <%= student.yearOfAdmission %></p>
      </div>
    </div>   
    <div class="row">
      <div class="col-md-10 text-end">
        <p><b>Course Status:</b> <%= student.courseStatus %></p>
      </div>
    </div>   
    <div class="row align-items-center">
      <div class="col-md-4">
        <p><b>Student Name:</b> <%= student.studentName %></p>
      </div>
      <div class="col-md-4">
        <p><b>Roll No.:</b> <%= student.rollNo %></p>
      </div>
      <div class="col-md-4">
        <p><b>Branch:</b> <%= student.branch %></p>
      </div>
    </div>
  </div>
   <!-- for indexInfo -->
   <div class="container mt-5">
    
    <div class="table-responsive">
      <table class="table table-bordered table-striped table-hover">
        <thead class="table-primary">
          <tr>
            <th>Sl. No</th>
            <th>Office/Department</th>
            <th>Signature of the Head Concerned</th>
            <th>Date</th>
            <th>Remarks</th>
          </tr>
        </thead>
        <tbody>
          
          <% student.departments.forEach((dept,count) => { %>
            <tr>
              <td><%=count +1 %></td>
              <td><%= dept.name %></td>
              <td>
                <% if (dept.isVerified) { %>
                  Verified
                <% } else { %>
                  
                     Not Verified
                  
                <% } %>
              </td>
              <td><%= dept.date ? dept.date.toLocaleDateString() : '' %></td>
              <td><%= dept.remarks  %></td>
            </tr>
          <% }) %>
          
        </tbody>
      </table>
    </div>
  </div>
  <div class="col-md-12">
      <p><b>Note :</b> Students are required to submit "NO Dues Certificate" to the Dean Office.</p>
  </div>
<!-- declaration by student -->
<div class="certification">
  <h1>DECLARATION BY THE STUDENT</h1>
</div>
<div>
  <div class="col-md-11">
    <p>I,..................................... heredy declare that to the best of my knowledge and belief 
      there are no dues payable by me to tne Institute. Should there be any, found on later date, I agree to
      pay the dues.
   </p>
  </div>
  
  <div class="container mt-4">
    <div class="row align-items-center">
      <div class="col-md-5">
        <p><B>Date :</B></p>
      </div>
      <div class="col-md-4">
        <p><b>Signature______________</b></p>
      </div>
    </div>
    <div class="col-md-11">
      <P><b>Permanent Address-</b><br>
        ................................................................................................................................................................................................................
        ................................................................................................................................................................................................................
      </P>
    </div>
    <div class="row align-items-center">
      <div class="col-md-5">
        <p><b>Personal Email ID :</b>.......................................................................</p>
      </div>
      <div class="col-md-4">
        <p><b>Mobile No :</b>...............................................................................</p>
      </div>
    </div>
    <div class="col-md-11">
      <P><b>Details of Placement/Higher Studies/others</b>.....................................................................................................................</P>
    </div>
  </div>
</div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>