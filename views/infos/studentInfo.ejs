<% layout("/layouts/boilerplate") %>

<body>
    <div class="college">
        <div class=" col-md-1 logo" >
            <img  src="https://reck.ac.in/wp-content/uploads/2023/03/rajkiya-engineering-college-kannauj-big-min.png">
        </div>
        <div class="col-md-10 info ">
            <h1>RAJKIYA ENGINEERING COLLEGE KANNAUJ</h1>
            <h1>UTTAR PRADESH</h1>
            <h3>(A GOVERNMENT ENGINEERING COLLEGE)</h3>
        </div>
    </div>
    <div class="certification">
        <h1>NO DUES CERTIFICATE</h1>
    </div>
    <div>
        <form method="post" action="/student" class="row g-3 needs-validation" novalidate>
            <div class="col-md-6">
              <label for="regNo" class="form-label">Reg.No.</label>
              <input name="students[regNo]" type="number" class="form-control" id="validationCustom01" value="Mark" required>
            </div>
            <div class="col-md-6">
              <label for="yearofadmission" class="form-label">Year of admission</label>
              <input name="students[yearOfAdmission]" type="number" class="form-control" id="year" name="year" min="1900" max="2100" step="1"  required>
            </div>
            <div class="col-md-12">
                <label for="courseStatus" class="form-label">Course Status</label>
                <select name="students[courseStatus]" class="form-select" id="validationCustom04" required>
                  <option selected  >Completed</option>
                  <option>Registration Cancel</option>
                 
                </select>
                <div class="invalid-feedback">
                  Please select a valid branch.
                </div>
              </div>
            <div class="col-md-6">
              <label for="studentName" class="form-label">Student Name</label>
              <input name="students[studentName]" type="text" class="form-control" id="validationCustom03" required>
              <div class="invalid-feedback">
                Please provide a valid name.
              </div>
            </div>
            <div class="col-md-3">
              <label for="branch" class="form-label">Branch</label>
              <select name="students[branch]" class="form-select" id="validationCustom04" required>
                <option   >CSE</option>
                <option>EL</option>
                <option>EE</option>
                <option>CE</option>
              </select>
              <div class="invalid-feedback">
                Please select a valid branch.
              </div>
            </div>
              <div class="col-md-3">
                <label for="rollNo" class="form-label">Roll No.</label>
                <input name="students[rollNo]" type="number" class="form-control" id="validationCustom05" required>
                <div class="invalid-feedback">
                  Please provide a valid Roll No.
                </div>
              </div>
            <div class="col-12">
              <button class="btn btn-primary" type="submit">Submit form</button>
            </div>
          </form>
    </div>
</body>
